<% include partials/header%>
<link rel="stylesheet" type="text/css" href="../stylesheets/new.css">

<div id="box" class="ui main text container segment">
    <div class="ui huge header">New Hospital</div>
    <form  class="ui form" action="/admin/hospitals/<%=hospital._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="hospital[name]" value="<%= hospital.name%>">
        </div>
        
        <div class="field">
            <label>Location</label>
            <input type="text" name="hospital[location]" value="<%= hospital.location %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="hospital[image]" value="<%= hospital.image%>">
        </div>
        <div class="field">
            <label>ICU-Rent</label>
            <input type="text" name="hospital[icuRent]" value="<%= hospital.icuRent%>">
        </div>
         <div class="field">
            <label>General-Rent</label>
            <input type="text" name="hospital[generalRent]" value="<%= hospital.generalRent%>">
        </div>
         <div class="field">
            <label>facility rating(0-10)</label>
            <input type="text" name="hospital[facilities]" value="<%= hospital.facilities%>">
        </div>
        
        <div class="field">
            <label>Doctor's Minimum Qualification Rating(0-10)</label>
            <input type="text" name="hospital[minQualification]" value="<%= hospital.minQualification%>">
        </div>   
         <div class="field">
            <label>Minimum Experience of Doctor in years</label>
            <input type="text" name="hospital[minExp]" value="<%= hospital.minExp%>">
        </div>
         <div class="field">
            <label>Year of establishment</label>
            <input type="text" name="hospital[yearOfEstablishment]" value="<%= hospital.yearOfEstablishment%>">
        </div>
         <div class="field">
            <label>No. of Frauds</label>
            <input type="text" name="hospital[noOfFrauds]" value="<%= hospital.noOfFrauds%>">
        </div>
         
        <input class="ui violet basic button" type="submit">
    </form>
</div>




<% include partials/footer%>
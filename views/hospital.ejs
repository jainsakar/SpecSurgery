      <div class="col-sm-8">
      
         <div class="ui top attached segment">
        <div class="ui divided items">
            <% hospitals.forEach(function(hospital){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%=hospital.image%>">
                    </div>
                    <div class="content">
                        <a id="title" class="header"href="/admin/hospitals/<%=hospital._id%>"><%= hospital.name%></a>
                        <div class="meta">
                           <span id="hosp"><b><%=hospital.location %></b></span>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button"  href="/admin/hospitals/<%=hospital._id%>">More
                                <i class="right chevron icon"></i>
                            </a>
                                
                        </div>
                    </div>    
                </div>
<% }); %>
        </div>
    </div>
